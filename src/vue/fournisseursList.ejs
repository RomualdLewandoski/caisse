<div class="e-card" id="fournisseursList">
    <div class="card-header">
        <h2>Fichiers / Fournisseurs</h2>

        <div class="action">
            <h5>
                <i class="fas fa-sync rounded clickable" id="refreshFournisseur"></i>
                <i class="fas fa-file-medical rounded clickable" id="addFournisseur"></i>
                <i class="fas fa-times rounded clickable" id="closeFournisseur"></i>
            </h5>
        </div>
    </div>
    <div class="card-title">
        <form>
            <div class="row">
                <div class="col-md-3">Raison sociale</div>
                <div class="col-md-3">Prénom</div>
                <div class="col-md-3">Nom</div>
                <div class="col-md-3">Téléphone</div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <input type="text" placeholder="Raison Sociale" class="form-control" id="searchSocietyName">
                </div>
                <div class="col-md-3">
                    <input type="text" placeholder="Prénom" class="form-control" id="searchFirstName">
                </div>
                <div class="col-md-3">
                    <input type="text" placeholder="Nom" class="form-control" id="searchLastName">
                </div>
                <div class="col-md-3">
                    <input type="tel" placeholder="Téléphone" class="form-control" id="searchPhone">
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-3">Email</div>
                <div class="col-md-3">Ville</div>
                <div class="col-md-3">CP</div>
                <div class="col-md-3">SIRET</div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <input type="email" placeholder="email" class="form-control" id="searchEmail">
                </div>
                <div class="col-md-3">
                    <input type="text" placeholder="VILLE" class="form-control" id="searchCity">
                </div>
                <div class="col-md-3">
                    <input type="text" placeholder="CP" class="form-control" id="searchZipCode">
                </div>
                <div class="col-md-3">
                    <input type="number" placeholder="SIRET" class="form-control" id="searchSiret">
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-3">
                    <div class="row">
                        <div class="col-md-5">
                            Recherche sur
                        </div>
                        <div class="col-md-7">
                            <select data-placeholder="" class="chosen-select" tabindex="2" id="searchActif">
                                <option value="all" selected>Tous</option>
                                <option value="1">Actif(s)</option>
                                <option value="0">Inactif(s)</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="card-body" style="min-height: 10%; max-height: 70%; overflow-y: scroll">
        <table class="table table-bordered table-striped">
            <thead class="fixed">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Raison sociale</th>
                <th scope="col">Nom</th>
                <th scope="col">Prénom</th>
                <th scope="col">Tel</th>
                <th scope="col">Adresse</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody id="tbodySupplierList">


            </tbody>

        </table>
    </div>
    <div class="card-footer">
        <div class="win-size-grip" id="resize-fournisseursList"></div>
    </div>
    <script src="./scripts/Front/supplier/supplierList.js"></script>
    <script>
        makeBoxe('#fournisseursList', "#resize-fournisseursList")
    </script>
    <script>
        var configChoosenSupplier = {
            '.chosen-select': {},
            '.chosen-select-deselect': {allow_single_deselect: true},
            '.chosen-select-no-single': {disable_search_threshold: 10},
            '.chosen-select-no-results': {no_results_text: 'Oops, nothing found!'},
            '.chosen-select-rtl': {rtl: true},
            '.chosen-select-width': {width: '95%'}
        }
        for (var selector in configChoosenSupplier) {
            $(selector).chosen(configChoosenSupplier[selector]);
        }
    </script>
</div>
